<section class="episode" role="article">
    <header class="episode-header">
        <h2 class="episode-title">
            <a href="{{ episode.url }}">{{ episode.title }}</a>
        </h2>
        <div class="episode-meta">
            <time datetime="{{ episode.date }}">{{ episode.date }}</time>
            {% if episode.duration %}
                <span class="episode-duration">{{ episode.duration }}</span>
            {% endif %}
        </div>
    </header>

    {% if episode.coverImage %}
        <figure class="episode-cover">
            <img
                src="{{ episode.coverImage }}"
                srcset="{{ episode.coverImage }} 500w, {{ episode.coverImage }} 1000w, {{ episode.coverImage }} 1500w"
                sizes="(max-width: 500px) 100vw, 500px"
                alt="{{ episode.title }} cover art"
                loading="lazy"
                decoding="async"
            />
        </figure>
    {% endif %}

    <div class="episode-content">
        {% if isEpisodePage %}
            <p class="episode-description">{{ episode.description }}</p>
        {% endif %}
        
        {% if episode.transcript %}
            <div class="episode-transcript">
                {{ episode.transcript | safe }}
            </div>
        {% endif %}
    </div>
</section>